<!-- editor actions -->
<% if current_user.is_editor? %>
  <%= f.inputs "Administration" do %>
    <%= f.input :user, :label => "Autor" %>
    <li>
      <label class="label">Status</label>
      <p>
      Dieser Artikel ist <%= article.published? ? "veröffentlicht" : "nicht veröffentlicht" %>
      und <%= article.pending_review? ? "wartet auf Überprüfung" : "wartet nicht auf Überprüfung" %>.
      </p>
    </li>
  <% end %>
  <fieldset class="buttons">
    <ol>
      <% if article.draft? %>
        <li class="commit button">
          <input class="update" type="submit" name="update" value="Speichern" />
        </li>
        <li class="commit button">
          <input class="update" type="submit" name="publish" value="Veröffentlichen" />
        </li>
      <% elsif article.pending_review? %>
        <li class="commit button">
          <input class="update" type="submit" name="update" value="Speichern" />
        </li>
        <li class="commit button">
          <input class="update" type="submit" name="ask_revise" value="Autor um Verbesserung biten" />
        </li>
        <li class="commit button">
          <input class="update" type="submit" name="publish" value="Veröffentlichen" />
        </li>
      <% elsif article.published? %>
        <li class="commit button">
          <input class="update" type="submit" name="publish" value="Speichern" />
        </li>
        <li class="commit button">
          <input class="update" type="submit" name="unpublish" value="" />
        </li>
      <% end %>
    </ol>
  </fieldset>
<% end %> <!-- editor actions -->

<!-- writer actions -->
<% if current_user.is_writer? %>
  <fieldset class="buttons">
  <ol>
    <li class="commit button">
      <input class="update" type="submit" name="update" value="Entwurf speichern" />
    </li>
    <li class="commit button">
      <input class="update" type="submit" name="ask_review" value="Fertig zur Überprüfung" />
    </li>
  </ol>
  </fieldset>
<% end %> <!-- writer actions -->

<!-- admin actions -->
<% if current_user.is_admin? %>
  <%= f.inputs "Administration"  do %>
    <%= f.input :published %>
    <%= f.input :pending_review %>
    <%= f.input :user, :label => "Autor" %>
  <% end %>
  <fieldset class="buttons">
    <ol>
      <li class="commit button">
      <input class="update" id="submit" name="commit" type="submit"
      value="Speichern">
      </li>
    </ol>
  </fieldset>
<% end %> <!-- admin actions -->

